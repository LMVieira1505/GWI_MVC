@model GWI.Models.Pessoas.Pessoas

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pessoas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pessoas" asp-action="Edit" asp-route-id="@Model.p_id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="p_nome" class="control-label"></label>
                <input asp-for="p_nome" class="form-control" />
                <span asp-validation-for="p_nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_sobrenome" class="control-label"></label>
                <input asp-for="p_sobrenome" class="form-control" />
                <span asp-validation-for="p_sobrenome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_username" class="control-label"></label>
                <input asp-for="p_username" class="form-control" />
                <span asp-validation-for="p_username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_telefone" class="control-label"></label>
                <input asp-for="p_telefone" class="form-control" />
                <span asp-validation-for="p_telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_email" class="control-label"></label>
                <input asp-for="p_email" class="form-control" />
                <span asp-validation-for="p_email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
