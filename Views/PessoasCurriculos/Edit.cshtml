@model GWI.Models.Curriculos.ForExpArea

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ForExp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="PessoasCurriculos" asp-action="Edit" asp-route-p_id="@ViewBag.p_id" asp-route-fe_id="@Model.fe_id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="fe_tipo" type="radio" value="false" /> Formação Acadêmica
                <input asp-for="fe_tipo" type="radio" value="true" /> Experiência Profissional
            </div>
            <div class="form-group">
                <label asp-for="fe_nome" class="control-label"></label>
                <input asp-for="fe_nome" class="form-control" />
                <span asp-validation-for="fe_nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fe_instituicao" class="control-label"></label>
                <input asp-for="fe_instituicao" class="form-control" />
                <span asp-validation-for="fe_instituicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fe_ano_ini" class="control-label"></label>
                <input asp-for="fe_ano_ini" class="form-control" />
                <span asp-validation-for="fe_ano_ini" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fe_ano_ter" class="control-label"></label>
                <input asp-for="fe_ano_ter" class="form-control" />
                <span asp-validation-for="fe_ano_ter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fe_descricao" class="control-label"></label>
                <input asp-for="fe_descricao" class="form-control" />
                <span asp-validation-for="fe_descricao" class="text-danger"></span>
            </div>

            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Serviços Sociais e Educação
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var item in ViewBag.AreasList)
                                {
                                    if (item.ar_tipo == "Serviços Sociais e Educação")
                                    {
                                        <li><input type="radio" asp-for="fe_ar_id" value="@item.ar_id" />@item.ar_nome</li>
                                        <span>@item.ar_id</span>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Engenharia e Manufatura
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var item in ViewBag.AreasList)
                                {
                                    if (item.ar_tipo == "Engenharia e Manufatura")
                                    {
                                        <li><input type="radio" asp-for="fe_ar_id" value="@item.ar_id" id="@item.ar_id" />@item.ar_nome</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Negócios e Finanças
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var item in ViewBag.AreasList)
                                {
                                    if (item.ar_tipo == "Negócios e Finanças")
                                    {
                                        <li><input type="radio" asp-for="fe_ar_id" value="@item.ar_id" id="@item.ar_id" />@item.ar_nome</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Saúde e Ciências da Vida
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul>
                                    @foreach (var item in ViewBag.AreasList)
                                    {
                                        if (item.ar_tipo == "Saúde e Ciências da Vida")
                                        {
                                            <li><input type="radio" asp-for="fe_ar_id" value="@item.ar_id" id="@item.ar_id" />@item.ar_nome</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>


                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                Tecnologia da Informação
                            </button>
                        </h2>
                        <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul>
                                    @foreach (var item in ViewBag.AreasList)
                                    {
                                        if (item.ar_tipo == "Tecnologia da Informação")
                                        {
                                            <li><input type="radio" asp-for="fe_ar_id" value="@item.ar_id" id="@item.ar_id" />@item.ar_nome</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}