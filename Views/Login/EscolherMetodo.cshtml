<!--  /main desktop/  -->
<main class="pag_sem_cotacoes">
    <!-- pagina de cadastro de usuario -->
    <section class="secao-cadastro rec-senha">
        <h2 class="titulo-cadastro">Recuperação de Senha</h2>

        <a asp-controller="Noticias" asp-action="Index">
            <button class="cadastro-close-button">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#141414" class="bi bi-x" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                </svg>
            </button>
        </a>

        <h3 class="subtitulo-cadastro">Selecione e Insira o Método de Envio do Código de Recuperação:</h3>

        <form class="form-cadastro">
            <div class="accordion-rec-sen">
                <div class="accordion-rec-sen-item">
                    <input type="radio" name="rec-senha" checked="checked" id="radio-rec-senha-1">
                    <label class="label-cadastro" for="radio-rec-senha-1">Email</label>
                    <div class="accordion-rec-sen-content">
                        <label class="label-rec-senha" for="email" id="collapseOne">
                            <input class="input-cadastro input-rec-senha" type="email" id="email" name="email" placeholder="Ex: joaozinho@email.com">
                        </label>
                    </div>
                </div>

                <div class="accordion-rec-sen-item">
                    <input type="radio" name="rec-senha" id="radio-rec-senha-2">
                    <label class="label-cadastro" for="radio-rec-senha-2">Telefone</label>
                    <div class="accordion-rec-sen-content">
                        <label class="label-rec-senha" for="tel-rec-senha" id="collapseTwo">
                            <input class="input-cadastro input-rec-senha" type="tel" id="tel-rec-senha" name="tel-rec-senha" placeholder="Ex: 16997610798">
                        </label>
                    </div>
                </div>
            </div>

            <a asp-controller="Login" asp-action="InserirCodigo">
                <input class="submit-cadastro" type="submit" value="Ok">
            </a>
            <a asp-controller="Login" asp-action="MetodoIncorreto">.</a>
        </form>
    </section>
</main>